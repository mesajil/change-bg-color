{
  "manifest_version": 3,
  "name": "Change Background Color",
  "version": "1.0.0",
  "description": "Update the background color of any web site in just one click.",
  "author": "Luis Mesajil",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logos/20x20.png",
      "32": "images/logos/35x35.png",
      "48": "images/logos/50x50.png",
      "128": "images/logos/125x125.png"
    }
  },
  "permissions": ["scripting"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
